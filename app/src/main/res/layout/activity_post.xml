<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PostActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="?android:attr/windowBackground">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:id="@+id/toolbar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:id="@+id/portfoliopost"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="6dp"
                    android:text="Write"
                    android:textSize="35dp"
                    android:fontFamily="@font/yanolja_regular" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/tabicon"
                    android:id="@+id/close"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/yanolja_regular"
                android:text="목적 >"
                android:textSize="25dp" />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/searchbar"
                android:hint="프로젝트를 생성 이유를 적어주세요."
                android:id="@+id/purpose_write"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="49dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="8dp"
                android:text="기간 >"
                android:textSize="25dp"
                android:fontFamily="@font/yanolja_regular"/>

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/searchbar"
                android:hint="프로젝트 활동기간을 적어주세요."
                android:id="@+id/data_write"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="49dp"/>

        </RelativeLayout>

            <EditText
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:hint="제목을 입력하세요."
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/yanolja_regular"
                android:id="@+id/title_write"
                android:textSize="25dp"
                android:background="@drawable/square"/>

            <EditText
                android:layout_width="340dp"
                android:layout_height="400dp"
                android:hint="내용을 입력하세요."
                android:layout_alignParentStart="true"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="35dp"
                android:fontFamily="@font/yanolja_regular"
                android:id="@+id/content_write"
                android:textSize="25dp"
                android:background="@drawable/square"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_gravity="right"
                android:src="@drawable/savebutton"
                android:id="@+id/post_write"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

